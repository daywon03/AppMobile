<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <!-- Barre d'outils -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarForgot"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFFFFF"
            app:title="Mot de passe oublié"
            app:titleTextColor="#222222"
            app:navigationIcon="@drawable/ic_fleche_cercle"
            app:navigationContentDescription="Retour"
            app:navigationIconTint="#40C4A1" />

        <!-- Champ pour entrer l'email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/RoundedInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <EditText
                android:id="@+id/emailForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entrez votre email"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bouton pour envoyer la demande -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnForgot"
            style="@style/RoundedButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#40C4A1"
            android:text="Réinitialiser"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
