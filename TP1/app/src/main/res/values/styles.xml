<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <!-- Style des boutons principaux -->
    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Style des boutons outline -->
    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">30dp</item>
        <item name="strokeColor">#40C4A1</item>
        <item name="android:textAllCaps">false</item>
    </style></resources>